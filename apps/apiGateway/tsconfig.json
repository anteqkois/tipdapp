{
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["es2020"],
    "isolatedModules": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["server.ts", "**/*.ts", "**/*.d.ts"],
  "ts-node": {
    "skipIgnore": true,
    "files": true,
    "require": []
  }
}
