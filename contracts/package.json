{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "main": "scripts/test.js",
  "scripts": {
    "dev":"npx hardhat node & sleep 5 && npm run deploy-dev",
    "decker": "docker run --env-file .env.development hardhat",
    "deploy-dev": "dotenv_config_path=.env.development npx hardhat run scripts/deploy.js --network localhost",
    "test:unit": "npx hardhat test test/unit/*",
    "test:integration": "npx hardhat node & npx hardhat test test/integration/*",
    "posttest:integration:": "kill $(lsof -Pi | grep :8545 | awk '{ print $2}')",
    "flatten": "npx hardhat flatten ./contracts/QoistipSign/QoistipSign.sol  > ./contracts/QoistipSign/QoistipSignFlatten.sol"
  },
  "author": "Antek Kois",
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.2",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.1.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
