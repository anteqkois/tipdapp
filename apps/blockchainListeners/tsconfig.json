{
  "compilerOptions": {
    // "module": "Node16",
    "module": "CommonJS",
    // "moduleResolution": "NodeNext",
    // "moduleResolution": "Node16",
    // "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["es2020"],
    "isolatedModules": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["index.ts", "**/*.ts", "**/*.d.ts"],
  "ts-node": {
    "skipIgnore": true,
    "files": true,
    "require": []
  }
}
