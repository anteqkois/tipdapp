{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "lib": ["ES2020"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib/cjs",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["./index.ts"]
}
