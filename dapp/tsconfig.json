{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/ts/*": ["src/ts/*"],
      "@/api/*": ["src/api/*"],
      "@/utils/*": ["src/utils/*"],
      "@/lib/*": ["src/lib/*"],
      "@/schema/*": ["src/schema/*"],
      "@/hooks": ["src/hooks"],
      "@/hooks/*": ["src/hooks/*"]
      // "@/lib": ["src/lib"],
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    // "**/*.js",
    // "**/*.jsx",
    // "src/pages/api/auth/[...nextauth].ts",
    "lib/prismaClient.js",
    "src/lib/redux/tipSlice.js"
  ],
  "exclude": ["node_modules", "dist", "src/artifacts"]
}
