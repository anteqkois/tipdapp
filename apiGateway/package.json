{
  "name": "@tipdapp/api",
  "version": "1.0.0",
  "description": "API Gateway for my frontend client to handle all routes from different microservices",
  "main": "index.ts",
  "scripts": {
    "dev": "NODE_ENV=development dotenv_config_path=.env.development nodemon",
    "prebuild": "rm -rf lib",
    "build": "npm run bundle && npm run build:ts",
    "bundle": "node esbuild.config.js",
    "prepack": "npm run build",
    "publishPackage": "npm version patch && npm publish",
    "build:ts": "tsc --build tsconfig.esm.json && tsc --build tsconfig.cjs.json"
  },
  "keywords": [
    "Api",
    "api",
    "gateway",
    "apigateway",
    "express"
  ],
  "author": "Antek Kois",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "esbuild": "^0.17.5"
  }
}
